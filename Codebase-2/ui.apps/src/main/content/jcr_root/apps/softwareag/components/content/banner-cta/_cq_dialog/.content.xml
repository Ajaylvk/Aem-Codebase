<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Banner CTA Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[herobanner_v1]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <ctatypes
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select components to be embedded in the widget"
                                        fieldLabel="CTA Types"
                                        name="./ctatypes">
                                        <items jcr:primaryType="nt:unstructured">
                                            <select
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Select the CTA type you want"
                                                value=""/>
                                            <pbutton
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Button"
                                                value="pbutton"/>
                                            <plinks
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Button and Link"
                                                value="plinks"/>
                                            <psbutton
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary and Secondary Button"
                                                value="psbutton"/>
                                            <buttonandlinks
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Button,Secondary Button and Link"
                                                value="psbuttonlink"/>
                                        </items>
                                    </ctatypes>
                                    <widgetalignment
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Defines the alignment of Widget"
                                        fieldLabel="Widget Alignment"
                                        name="./position">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Left"
                                                value="left-align"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center-align"/>
                                        </items>
                                    </widgetalignment>
                                    <backgroundcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="The Background color of the component."
                                        fieldLabel="Background Color"
                                        name="./backgroundColor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <select
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Select Widget Background Color"
                                                value=""/>
                                            <corelight
                                                jcr:primaryType="nt:unstructured"
                                                text="Core Light"
                                                value="input__colorselect-background-color7"/>
									        <coredark150
                                                jcr:primaryType="nt:unstructured"
                                                text="Core Dark 120"
                                                value="input__colorselect-background-color8"/>
                                            <coredark950
                                                jcr:primaryType="nt:unstructured"
                                                text="Core Dark 950"
                                                value="input__colorselect-background-color10"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="input__colorselect-background-color1"/>
                                        </items>
                                    </backgroundcolor>
                                </items>
                            </column>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
