<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Configuration"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <searchUiLanguage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}true"
                                fieldDescription="Search UI language"
                                fieldLabel="Search UI language"
                                name="./searchUiLanguage"
                                value="en" />
                            <searchLanguage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}true"
                                fieldDescription="Search language"
                                fieldLabel="Search language"
                                name="./searchLanguage"
                                value="en" />
                            <searchPageLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                required="{Boolean}true"
                                fieldDescription="Search result page name with path to the root NEW"
                                fieldLabel="Search page (with path to the root) NEW"
                                value="/content/softwareag/test/search-result.html"
                                name="./link/href" />
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
