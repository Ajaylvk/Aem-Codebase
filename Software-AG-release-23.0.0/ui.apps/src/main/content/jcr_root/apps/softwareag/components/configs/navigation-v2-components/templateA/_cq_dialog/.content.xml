<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Template A"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <sectionaremover
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="Check to Remove Section A"
                        name="./sectionaremover"
                        text="Remove Section A"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                    <sectionbremover
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="Check to Remove Section B"
                        name="./sectionbremover"
                        text="Remove section B"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                    <sectioncremover
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="Check to Remove Section C"
                        name="./sectioncremover"
                        text="Remove Section C"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
