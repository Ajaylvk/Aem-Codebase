<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Reference Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <path
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="The reference of the content that needs to be included."
                        fieldLabel="Reference"
                        name="./path"
                        rootPath="/content"/>
                    <tags
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                        allowBulkEdit="{Boolean}true"
                        autocreateTag="{Boolean}false"
                        fieldDescription="The tags used for filtering purposes."
                        fieldLabel="Tags"
                        multiple="{Boolean}true"
                        name="./tags"/>
                    <anchorName
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="A internal name to be used for anchor jump functionality e.g. container1"
                        fieldLabel="Anchor Name"
                        name="./anchorName"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
