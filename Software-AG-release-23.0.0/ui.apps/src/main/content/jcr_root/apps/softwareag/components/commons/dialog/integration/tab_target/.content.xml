<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Target"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
    margin="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <isTargeted
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    text="Target this component"
                    fieldDescription="If checked, the component is targetable."
                    name="./targetThisComponent"
                    value="{Boolean}true"
                    uncheckedValue="{Boolean}false" />
                <mboxName
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                    rootPath="/content/cq:tags"
                    allowBulkEdit="{Boolean}false"
                    autocreateTag="{Boolean}false"
                    fieldLabel="Mbox Name"
                    fieldDescription="Add Mbox name here."
                    multiple="{Boolean}false"
                    required="{Boolean}false"
                    name="./mbox" />
            </items>
        </column>
    </items>
</jcr:root>
