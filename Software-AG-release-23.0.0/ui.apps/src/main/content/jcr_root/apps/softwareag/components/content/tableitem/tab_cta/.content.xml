<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <linkLabel
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldLabel="CTA Link Label"
            fieldDescription="Please add link label here."
            name="./link/text" />
        <linkDestination
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
            fieldLabel="CTA Link Destination"
            fieldDescription="Please add link destination here."
            rootPath="/content"
            required="{Boolean}true"
            name="./link/href" />
        <displayinline
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
            fieldDescription="When checked, the download asset will be displayed inline in the browser. Please activate if asset (PDF) should be opened in a new tab."
            text="Display inline"
            value="true"
            checked="{Boolean}false"
            uncheckedValue="{Boolean}false"
            name="./inline" />
    </items>
</jcr:root>

