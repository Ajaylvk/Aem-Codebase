<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Map Configuration"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <latitude
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}true"
                                fieldDescription="The latitude of the default map view."
                                fieldLabel="Latitude"
                                name="./latitude"
                                value="13.0612527" />
                            <longitude
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                required="{Boolean}true"
                                fieldDescription="The longitude of the default map view."
                                fieldLabel="Longitude"
                                name="./longitude"
                                value="24.2707508" />
                            <zoomLevel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                step="{String}1"
                                fieldDescription="The zoom level of the default map view."
                                fieldLabel="Zoom level"
                                name="./zoomLevel"
                                value="2" />
                        </items>
                    </column>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
